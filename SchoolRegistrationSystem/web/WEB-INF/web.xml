<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>School Registration System Application</display-name>
	<welcome-file-list>  
	   <welcome-file>login.jsp</welcome-file>  
	</welcome-file-list>
	
	<servlet>
		<servlet-name>userRegistrationServlet</servlet-name>
		<servlet-class>com.SchoolRegistrationSystem.UserRegistrationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>userRegistrationServlet</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>staffServlet</servlet-name>
		<servlet-class>com.SchoolRegistrationSystem.staffServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>staffServlet</servlet-name>
		<url-pattern>/staffServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>resetPasswordServlet</servlet-name>
		<servlet-class>com.SchoolRegistrationSystem.resetPasswordServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>resetPasswordServlet</servlet-name>
		<url-pattern>/resetPassword</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>gradeupdate</servlet-name>
		<servlet-class>com.SchoolRegistrationSystem.gradeupdate</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>gradeupdate</servlet-name>
		<url-pattern>/gradeupdate</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>attendanceupdate</servlet-name>
		<servlet-class>com.SchoolRegistrationSystem.attendanceupdate</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>attendanceupdate</servlet-name>
		<url-pattern>/attendanceupdate</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>parentServlet</servlet-name>
		<servlet-class>com.SchoolRegistrationSystem.ParentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>parentServlet</servlet-name>
		<url-pattern>/parentServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>studentServlet</servlet-name>
		<servlet-class>com.SchoolRegistrationSystem.StudentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>studentServlet</servlet-name>
		<url-pattern>/studentServlet</url-pattern>
	</servlet-mapping>

	
</web-app>
